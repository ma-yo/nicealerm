<Window x:Class="NiceAlerm.AlermWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NiceAlerm"
        mc:Ignorable="d"
        Icon="Images/clock.ico"
        Topmost="True"
        
        Title="AlermWindow" Height="250" Width="800" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid x:Name="MainGrid" Background="Yellow">
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Border x:Name="MainBorder" Grid.Row="0" Grid.Column="0" Margin="20,20,20,20" Background="Black">
            <TextBlock  x:Name="MessageText" Foreground="Tomato" TextAlignment="Center" Text="" FontFamily="Meiryo UI" TextWrapping="Wrap" Margin="30,30,30,30" HorizontalAlignment="Center" VerticalAlignment="Center"  FontSize="50"/>
        </Border>
    </Grid>
</Window>
